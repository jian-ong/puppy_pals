                <img src="https://i.imgur.com/polTld9.jpg?1" alt=""> %>
            </div>
        </div>

        <div class="login_signup">
            <% unless logged_in? %>
                <!-- login form --> 
                <p class="returning">Returning member?</p>
                <h3>Sign in</h3>
                <form action="/login" method = "post">
                <input type="text" name = "email" value ="Email address" > 
                <br>
                <input type="password" name = "password" value = "Password">
                <br>
                <button>Log In</button>
                </form>
                <br>

                <!-- sign up -->
                <p>New members?</p>
                <a href="/dogs/new"> Sign Up </a>
            <% end %>
        </div>
        

    </section>
</body>