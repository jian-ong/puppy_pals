<h1>Conversations with <%= recipient_dog['username'] %></h1>


<% messages.each do |message| %>

    <% if message['sender_id'] == current_dog['id']%> 
        <section class="messages_grid">
            <p></p>
            <div class="messages_content_self">
                <%= message['username'] %> <br>
                <%= message['created_at'] %> <br>
                <%= message['message_content'] %>
            </div>
            <img class="messages_pic" src="<%= message['image_url'] %>" alt="" srcset=""> 
        </section>
    <% else %>
        <section class="messages_grid">
            <img class="messages_pic" src="<%= message['image_url'] %>" alt="" srcset="">
            <div class="messages_content_friend">
                <%= message['username'] %> <br>
                <%= message['created_at'] %> <br>
                <%= message['message_content'] %>
            </div>
            <p></p>
            </section>
    <% end %>
<% end %>
<hr> 
<section class="new_message">
    <img class="current_dog_pic" src="<%= current_dog["image_url"] %>" alt="" srcset=""> 
    <form class="new_message_form" action="/new_message" method="post">
        <input type="hidden" name="recipient_id" value="<%= recipient_dog['id'] %>">
        <input type="hidden" name="sender_id" value="<%= current_dog['id'] %>">
        <textarea name="message_content" rows="7" cols="50">
        Type Message Here </textarea>
        <button class="send_button">Send</button>
    </form>
</section>